@model UserUpdateDto
<h1 class="display-6 fw-bold">Düzenle</h1>
<hr />
<form asp-area="Admin"
      asp-controller="Student"
      asp-action="Edit"
      method="post">

    <div class="row">
        <div class="col-8">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input class="form-control" asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input class="form-control" asp-for="LastName">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input class="form-control" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input class="form-control" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
             <div class="mb-3">
                <label asp-for="Location" class="form-label"></label>
                <input class="form-control" asp-for="Location">
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
                  <div class="col-6 mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" asp-items="@Model.GenderSelectList" class="form-select">
            </select>
            
        </div>
                       @{
            DateTime today = DateTime.Now;
            int yearToday = today.Year;
            int year = yearToday - 18;
            int month = today.Month;
            int day = today.Day;
            DateTime minBirthOfDate = new DateTime(year, month, day);
        }
        <div class="col-6 mb-3">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input 
                type="date" 
                class="form-control" 
                asp-for="DateOfBirth"
                value="@(Model.DateOfBirth.ToString("yyyy-MM-dd")=="0001-01-01" ? minBirthOfDate.ToString("yyyy-MM-dd") : Model.DateOfBirth.ToString("yyyy-MM-dd"))"
                min="1900-01-01"
                max="@minBirthOfDate.ToString("yyyy-MM-dd")"
            >
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>


            <button type="submit" class="btn btn-primary mt-3" id="btn-save">Kaydet</button>
            <a type="button" class="btn btn-light"
               asp-area="Admin"
               asp-controller="Student"
               asp-action="Index">Vazgeç</a>
        </div>

    </div>
</form>