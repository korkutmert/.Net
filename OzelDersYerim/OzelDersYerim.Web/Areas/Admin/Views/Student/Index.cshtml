@model List<StudentListDto>
<div class="row">
    <div class="col-4">
        <a class="btn btn-outline-primary mb-3"
           asp-area="Admin"
           asp-controller="Student"
           asp-action="CreateStudent"> Ekle</a>
    </div>

</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var student in Model)
        {

            <tr>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.UserName</td>
                <td>@student.Email</td>
                <td>

                    <a class="btn btn-warning btn-sm"
                   asp-area="Admin"
                   asp-controller="Student"
                   asp-action="Edit"
                   asp-route-id=@student.Id>Düzenle</a>

                        @await Html.PartialAsync("_StudentDeletePartial", student)

                    @* <a class="btn btn-danger btn-sm"
                   asp-area="Admin"
                   asp-controller="Student"
                   asp-action="Delete"
                   asp-route-id=@student.UserName>Sil</a> *@

                </td>
            </tr>

        }

    </tbody>
</table>