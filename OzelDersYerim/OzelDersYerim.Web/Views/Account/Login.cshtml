@using OzelDersYerim.Web.Models.Dtos;
@model LoginDto

<body style="background-image:url(https://img.freepik.com/premium-vector/open-book-with-icon-doodles_38359-113.jpg?w=1000); background-repeat:no-repeat; background-position:center">
<div class="container" style="margin-top:150px">
    <div class="row text-center">
        <div class="col-4">

        </div>
        <div class="col-4">
                <h1 class="text-center display-6 text-light">Giriş Yap</h1>
            <hr />

            <form asp-controller="Account" asp-action="Login" method="post">
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="form-label text-light"></label>
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                        <label asp-for="Password" class="form-label text-light"></label>
                    <input class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-outline-success mt-3">Giriş Yap</button>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <a class="btn  mt-3 btn-outline-info"asp-controller="Account" asp-action="ForgotPassword">Şifremi Unuttum</a>
                <a type="button" class="btn mt-3 btn-outline-danger" asp-controller="Home" asp-action="Index">Vazgeç</a>
            </form>
        </div>
        <div class="col-4">
        </div>
    </div>
</div>

</body>